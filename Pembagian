#include <iostream>
#include <conio.h>

using namespace std;

int penjumlahan(){
int x,y;

cout<<"Penjumlahan" <<endl;
cout<<"masukkan angka pertama :";
cin>>x;
cout<<"masukkan angka kedua :";
cin>>y;
cout<<"Hasil :" <<x+y<<endl;
cout<<endl;
}

int pengurangan(){
int x,y;

cout<<"Pengurangan" <<endl;
cout<<"masukkan angka pertama :";
cin>>x;
cout<<"masukkan angka kedua :";
cin>>y;
cout<<"Hasil :" <<x-y<<endl;
cout<<endl;
}

int perkalian(){
int x,y;

cout<<"Perkalian" <<endl;
cout<<"masukkan angka pertama :";
cin>>x;
cout<<"masukkan angka kedua :";
cin>>y;
cout<<"Hasil :" <<x*y<<endl;
cout<<endl;
}

int Pembagian(){
int x,y;

cout<<"Pembagian" <<endl;
cout<<"masukkan angka pertama :";
cin>>x;
cout<<"masukkan angka kedua :";
cin>>y;
cout<<"Hasil :" <<x/y<<endl;
cout<<endl;
}


int main(){
cout<<endl;
penjumlahan();
pengurangan();
perkalian();
pembagian();
cout<<endl;
system("pause");

getch();
return 0;
}
